{
  "manifest_version": 2,

  "name": "Chrome Based File Explorer",
  "description": "This extension will allow access to a part of the local filesystem vis Chrome",
  "version": "1.0",

  "content_scripts": [
    { 
      "matches": ["file:///*"],
      "js": [ "scripts/jquery-3.2.1.min.js", "scripts/explorer.js", "scripts/bootstrap.min.js"],
      "css": ["styles/styles.css", "styles/bootstrap.min.css"]
    }
  ],
  "browser_action": {
    "default_icon": "icon.png",
    "name": "Click to open file explorer"
  },
  "permissions": [
    "activeTab",
    "file:///*"
  ],
  "web_accessible_resources": [
    "styles/img/pdf.png",
    "styles/img/txt.png",
    "styles/img/mp3.png",
    "styles/img/img.png",
    "scripts/dragdrop.js"
  ]
}