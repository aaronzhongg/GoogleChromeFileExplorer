{
  "manifest_version": 2,

  "name": "Chrome Based File Explorer",
  "description": "This extension will allow access to a part of the local filesystem vis Chrome",
  "version": "1.0",

  "content_scripts": [
    {
      "matches": ["file:///*"],
      "js": ["scripts/explorer.js"]
    }
  ],
  "browser_action": {
    "default_icon": "icon.png",
    "name": "Click to open file explorer"
  },
  "permissions": [
    "activeTab",
    "file:///*"
  ]
}